<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="commons.arttitle01.title"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <settings
                jcr:primaryType="cq:Panel"
                title="commons.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <author
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.arttitle01.author-description"
                        fieldLabel="commons.arttitle01.author-label"
                        name="./author"
                        xtype="textfield"/>
                    <source
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.arttitle01.source-description"
                        fieldLabel="commons.arttitle01.source-label"
                        name="./source"
                        xtype="textfield"/>
                    <label
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.arttitle01.label-description"
                        fieldLabel="&lt;br>"
                        xtype="label"/>
                </items>
            </settings>
            <link
                jcr:primaryType="cq:Panel"
                title="Link">
                <items jcr:primaryType="cq:WidgetCollection">
                    <linktype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.link.linktype-label"
                        name="./linkType"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <internal
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.internallink-label"
                                value="internal"/>
                            <external
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.externallink-label"
                                value="external"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field, record, path) {  linkLoadContent(field, record, path);}"
                            selectionchanged="function(selection,value, checked){ linkSelectionChanged(selection,value, checked); }"/>
                    </linktype>
                    <internallink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.internallink-description"
                        fieldLabel="commons.link.internallink-label"
                        name="./internalLink"
                        rootPath="/content/televisa"
                        rootTitle="Televisa"
                        xtype="pathfield"/>
                    <externallink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.externallink-description"
                        fieldLabel="commons.link.externallink-label"
                        name="./externalLink"
                        xtype="textfield"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_blank"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.title-description"
                        fieldLabel="commons.link.title-label"
                        name="./linkTitle"
                        xtype="textfield"/>
                </items>
            </link>
            <devices
                jcr:primaryType="cq:Panel"
                title="deportes.devices.tabtitle.label">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideDevices
                        jcr:primaryType="cq:Widget"
                        fieldDescription="deportes.devices.hidedevices.description"
                        fieldLabel="deportes.devices.hidedevices.label"
                        name="./hideDevice"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <item1
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.do-nothing"
                                value=""/>
                            <item2
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-tablet-mobile"
                                value="hide-tablet"/>
                            <item3
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-mobile"
                                value="hide-mobile"/>
                        </options>
                    </hideDevices>
                    <resType1
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image1/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                    <resType2
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image2/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </devices>
        </items>
    </items>
</jcr:root>
