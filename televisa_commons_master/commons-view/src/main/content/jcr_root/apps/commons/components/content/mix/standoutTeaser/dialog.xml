<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="commons.standoutTeaser.title"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <settingsmain
                jcr:primaryType="cq:Panel"
                title="commons.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <patharticle
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.standoutteaser.patharticle.description"
                        fieldLabel="commons.standoutTeaser.patharticle.label"
                        name="./patharticle"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                    <showcontext
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.showcontext.description"
                        fieldLabel="commons.showcontext.label"
                        defaultValue="{Boolean}true"
                        name="./showcontext"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </settingsmain>
            <settingsrelated
                jcr:primaryType="cq:Panel"
                title="commons.standoutteaser.settings.relatedarticle.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <patharticle
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.primaryteaser.patharticle.description"
                        fieldLabel="commons.primaryteaser.patharticle.label"
                        name="./patharticlerelated"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget2"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                </items>
            </settingsrelated>
            <settingsrelatedvideo
                jcr:primaryType="cq:Panel"
                title="commons.standoutteaser.settings.relatedvideo.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <patharticle
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.standoutteaser.path.video.description"
                        fieldLabel="commons.standoutteaser.settings.relatedvideo.label"
                        name="./patharticlerelatedvideo"
                        rootPath="/content/televisa"
                        xtype="youtubevideogallerysearch"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget3"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                </items>
            </settingsrelatedvideo>
            <devices
                jcr:primaryType="cq:Panel"
                title="deportes.devices.tabtitle.label">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideDevices
                        jcr:primaryType="cq:Widget"
                        fieldDescription="deportes.devices.hidedevices.description"
                        fieldLabel="deportes.devices.hidedevices.label"
                        name="./hideDevice"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <item1
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.do-nothing"
                                value=""/>
                            <item2
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-tablet-mobile"
                                value="hide-tablet"/>
                            <item3
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-mobile"
                                value="hide-mobile"/>
                        </options>
                    </hideDevices>
                </items>
            </devices>
        </items>
    </items>
</jcr:root>
