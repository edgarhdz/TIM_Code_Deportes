<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    xtype="dialog">
    <items jcr:primaryType="cq:TabPanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <settings
                jcr:primaryType="cq:Panel"
                title="commons.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <type
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldDescription="commons.indexByTags.type.description"
                        fieldLabel="commons.indexByTags.type.label"
                        name="./type"
                        type="radio"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            render="function(selection) {&#xa;&#x9;if( selection.getValue() == &quot;automatic&quot; ) {&#xa;    &#x9;&#x9;selection.findParentByType('panel').getComponent(2).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(3).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(4).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(5).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(6).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(7).setVisible(true);&#xa;&#x9;}else{&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(2).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(3).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(4).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(5).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(6).setVisible(true);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(7).setVisible(false);&#xa;&#x9;}&#xa;}"
                            selectionchanged="function(selection, value, checked) {&#xa;&#x9;if( value == &quot;automatic&quot; ) {&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(2).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(3).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(4).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(5).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(6).setVisible(false);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(7).setVisible(true);&#xa;&#x9;}else{&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(2).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(3).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(4).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(5).setVisible(true);&#xa;&#x9;    &#x9;selection.findParentByType('panel').getComponent(6).setVisible(true);&#xa;&#x9;&#x9;selection.findParentByType('panel').getComponent(7).setVisible(false);&#xa;&#x9;}&#xa;}"/>
                        <options jcr:primaryType="cq:WidgetCollection">
                            <manual
                                jcr:primaryType="nt:unstructured"
                                text="commons.indexByTags.type.manual"
                                value="manual"/>
                            <automatic
                                jcr:primaryType="nt:unstructured"
                                text="commons.indexByTags.type.automatic"
                                value="automatic"/>
                        </options>
                    </type>
                    <firstpath
                        jcr:primaryType="cq:Widget"
                        allowBlank="{Boolean}false"
                        fieldDescription="commons.carrousel.first.article.description"
                        fieldLabel="commons.carrousel.first.article.dialog"
                        name="./firstPage"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <secondpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.carrousel.second.article.description"
                        fieldLabel="commons.carrousel.second.article.dialog"
                        name="./secondPage"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <thirdpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.carrousel.third.article.description"
                        fieldLabel="commons.carrousel.third.article.dialog"
                        name="./thirdPage"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <fourthpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.carrousel.fourth.article.description"
                        fieldLabel="commons.carrousel.fourth.article.dialog"
                        name="./fourthPage"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <fifthpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.carrousel.fifth.article.description"
                        fieldLabel="commons.carrousel.fifth.article.dialog"
                        name="./fifthPage"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <sixthpath
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.carrousel.sixth.article.description"
                        fieldLabel="commons.carrousel.sixth.article.dialog"
                        name="./sixthPage"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <tags
                        jcr:primaryType="cq:Widget"
                        cls="cq-propsdialog-tags"
                        fieldDescription="commons.indexByTags.tags.description"
                        fieldLabel="commons.indexByTags.tags.label"
                        min-width="300"
                        name="./cq:tags"
                        width="300"
                        xtype="tags"/>
                </items>
            </settings>
            <generalsettings
                jcr:primaryType="cq:Panel"
                title="commons.carrousel.generalsettings">
                <items jcr:primaryType="cq:WidgetCollection">
                    <showcontext
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.showcontext.description"
                        fieldLabel="commons.showcontext.label"
                        name="./showcontext"
                        type="checkbox"
                        xtype="selection"/>
                    <showtopic
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.showtopic.description"
                        fieldLabel="commons.showtopic.label"
                        name="./showtopic"
                        type="checkbox"
                        xtype="selection"/>
                    <showtitle
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.showtitle.description"
                        fieldLabel="commons.showtitle.label"
                        name="./showtitle"
                        type="checkbox"
                        xtype="selection"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_blank"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                </items>
            </generalsettings>
        </items>
    </items>
</jcr:root>
