<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="370"
    title="commons.recentVideos.title"
    width="550"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
	    <inheritanceTab
                jcr:primaryType="cq:Widget"
                path="/apps/commons/components/content/base/inheritance/inheritanceTab.infinity.json"
                xtype="cqinclude"/>
            <tab1
                jcr:primaryType="cq:Panel"
                title="commons.recentVideos.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <notes
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        blankText="commons.prominentteaser.patharticle.blanktext"
                        defaultValue=""
                        fieldDescription="commons.galleryHistory.typeOfNote.description"
                        fieldLabel="commons.galleryHistory.typeOfNote.label"
                        name="./typeOfNote"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <articles
                                jcr:primaryType="nt:unstructured"
                                text="commons.galleryHistory.showarticles"
                                value="article"/>
                            <videos
                                jcr:primaryType="nt:unstructured"
                                text="commons.galleryHistory.showvideos"
                                value="video"/>
                            <photogalleries
                                jcr:primaryType="nt:unstructured"
                                text="commons.galleryHistory.showphotogalleries"
                                value="gallery"/>
                        </options>
                    </notes>
                    <path
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        blankText="commons.prominentteaser.patharticle.blanktext"
                        fieldDescription="commons.videoCarousel.path.description"
                        fieldLabel="commons.videoCarousel.path.label"
                        name="./path"
                        rootPath="/content/televisa"
                        rootTitle="Televisa"
                        xtype="pathfield"/>
                    <tags
                        jcr:primaryType="cq:Widget"
                        blankText="commons.prominentteaser.patharticle.blanktext"
                        cls="cq-propsdialog-tags"
                        fieldDescription="commons.videoCarousel.tags.description"
                        fieldLabel="commons.videoCarousel.tags.label"
                        name="./cq:tags"
                        xtype="tags"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTargetVideo"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                </items>
            </tab1>
             <link
                jcr:primaryType="cq:Panel"
                title="commons.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.text.description"
                        fieldLabel="commons.link.title"
                        name="./linkText"
                        xtype="textfield"/>
                    <linktype
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.link.linktype-label"
                        name="./linkType"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <internal
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.internallink-label"
                                value="internal"/>
                            <external
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.externallink-label"
                                value="external"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field, record, path) {  linkLoadContent(field, record, path);}"
                            selectionchanged="function(selection,value, checked){ linkSelectionChanged(selection,value, checked); }"/>
                    </linktype>
                    <internallink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.internallink-description"
                        fieldLabel="commons.link.internallink-label"
                        name="./internalLink"
                        rootPath="/content/televisa"
                        rootTitle="Televisa"
                        xtype="pathfield"/>
                    <externallink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.externallink-description"
                        fieldLabel="commons.link.externallink-label"
                        name="./externalLink"
                        xtype="textfield"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_self"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.title-description"
                        fieldLabel="commons.link.title-label"
                        name="./linkTitle"
                        xtype="textfield"/>
                     <hide
           	 			jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.hide-description"
                        fieldLabel="commons.link.hide-label"
                        name="./linkHide" 
                        type = "checkbox"            
                        xtype="selection"
           			/>
                </items>
            </link>
            <devices
                jcr:primaryType="cq:Panel"
                title="deportes.devices.tabtitle.label">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideDevices
                        jcr:primaryType="cq:Widget"
                        fieldDescription="deportes.devices.hidedevices.description"
                        fieldLabel="deportes.devices.hidedevices.label"
                        name="./hideDevice"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <item1
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.do-nothing"
                                value=""/>
                            <item2
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-tablet-mobile"
                                value="hide-tablet"/>
                            <item3
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-mobile"
                                value="hide-mobile"/>
                        </options>
                    </hideDevices>
                    <resType1
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image1/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                    <resType2
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image2/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </devices>
        </items>
    </items>
</jcr:root>
