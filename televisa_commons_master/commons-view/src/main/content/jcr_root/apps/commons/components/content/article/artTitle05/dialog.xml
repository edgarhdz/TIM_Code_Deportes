<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="commons.artTitle05.dialog.title"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <settings
                jcr:primaryType="cq:Panel"
                title="commons.artTitle05.dialog.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <programName
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.artTitle05.dialog.settings.programname.description"
                        fieldLabel="commons.artTitle05.dialog.settings.programname.label"
                        name="./programName"
                        xtype="textfield"/>
                    <programChannel
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.artTitle05.dialog.settings.programchannel.description"
                        fieldLabel="commons.artTitle05.dialog.settings.programchannel.label"
                        name="./programChannel"
                        xtype="textfield"/>
                    <programSchedule
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.artTitle05.dialog.settings.programschedule.description"
                        fieldLabel="commons.artTitle05.dialog.settings.programschedule.label"
                        name="./programSchedule"
                        xtype="textfield"/>
                </items>
            </settings>
            <synopsis
                jcr:primaryType="cq:Panel"
                title="commons.artTitle05.dialog.synopsis.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <programSynopsis
                        jcr:primaryType="cq:Widget"
                        hideLabel="{Boolean}true"
                        name="./programSynopsis"
                        xtype="richtext">
                        <rtePlugins jcr:primaryType="nt:unstructured">
                            <table
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <format
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <lists
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <justify
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <edit
                                jcr:primaryType="nt:unstructured"
                                features="[paste-wordhtml]"/>
                            <findreplace
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <paraformat
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <subsuperscript
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <misctools
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <links
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <spellcheck
                                jcr:primaryType="nt:unstructured"
                                features="*"
                                invalidStyle="background-color: #ffdddd;"/>
                            <undo
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                            <image
                                jcr:primaryType="nt:unstructured"
                                features="*"/>
                        </rtePlugins>
                    </programSynopsis>
                </items>
            </synopsis>
            <link
                jcr:primaryType="cq:Panel"
                title="commons.link.text">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.description"
                        fieldLabel="commons.link.title"
                        name="./linkText"
                        xtype="textfield"/>
                    <linktype
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.linktype-description"
                        fieldLabel="commons.link.linktype-label"
                        name="./linkType"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <internal
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.internallink-label"
                                value="internal"/>
                            <external
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.externallink-label"
                                value="external"/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field, record, path) {  linkLoadContent(field, record, path);}"
                            selectionchanged="function(selection,value, checked){ linkSelectionChanged(selection,value, checked); }"/>
                    </linktype>
                    <internallink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.internallink-description"
                        fieldLabel="commons.link.internallink-label"
                        name="./internalLink"
                        rootPath="/content/televisa"
                        rootTitle="Televisa"
                        xtype="pathfield"/>
                    <externallink
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.externallink-description"
                        fieldLabel="commons.link.externallink-label"
                        name="./externalLink"
                        xtype="textfield"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="Select"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.title-description"
                        fieldLabel="commons.link.title-label"
                        name="./linkTitle"
                        xtype="textfield"/>
                </items>
            </link>
        </items>
    </items>
</jcr:root>
