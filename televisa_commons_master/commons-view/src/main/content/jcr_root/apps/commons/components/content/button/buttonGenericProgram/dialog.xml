<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    title="commons.buttonprogram.dialog.title"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
	    <inheritanceTab
                jcr:primaryType="cq:Widget"
                path="/apps/commons/components/content/base/inheritance/inheritanceTab.infinity.json"
                xtype="cqinclude"/>
            <tab1
                jcr:primaryType="cq:Panel"
                title="commons.buttonprogram.dialog.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <pathProgram
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.buttonprogram.dialog.settings.pathprogram.description"
                        fieldLabel="commons.buttonprogram.dialog.settings.pathprogram.label"
                        name="./pathProgram"
                        rootPath="/content/televisa"
                        xtype="searchpathfield"/>
                    <teaserText
                        jcr:primaryType="cq:Widget"
                        emptyText="Â¡Mirala de Lunes a Viernes en"
                        fieldDescription="commons.buttonprogram.dialog.settings.teasertext.description"
                        fieldLabel="commons.buttonprogram.dialog.settings.teasertext.label"
                        name="./teaserText"
                        xtype="textfield"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        defaultValue="_blank"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTarget"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target.option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                </items>
            </tab1>
            <tab2
                jcr:primaryType="cq:Panel"
                title="commons.buttonprogram.dialog.settings.image.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <image
                        jcr:primaryType="cq:Widget"
                        allowUpload="false"
                        border="true"
                        cropParameter="./imageCrop"
                        ddGroups="[media]"
                        fieldLabel="commons.buttonprogram.image.label"
                        fileNameParameter="./fileName"
                        fileReferenceParameter="./fileReference"
                        height="230"
                        hideLabel="false"
                        mapParameter="./imageMap"
                        name="./file"
                        requestSuffix=".img.png"
                        rotateParameter="./imageRotate"
                        xtype="html5smartimage"/>
                </items>
            </tab2>
            <devices
                jcr:primaryType="cq:Panel"
                title="deportes.devices.tabtitle.label">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideDevices
                        jcr:primaryType="cq:Widget"
                        fieldDescription="deportes.devices.hidedevices.description"
                        fieldLabel="deportes.devices.hidedevices.label"
                        name="./hideDevice"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <item1
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.do-nothing"
                                value=""/>
                            <item2
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-tablet-mobile"
                                value="hide-tablet"/>
                            <item3
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-mobile"
                                value="hide-mobile"/>
                        </options>
                    </hideDevices>
                    <resType1
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image1/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                    <resType2
                        jcr:primaryType="cq:Widget"
                        ignoreData="{Boolean}true"
                        name="./image2/sling:resourceType"
                        value="foundation/components/image"
                        xtype="hidden"/>
                </items>
            </devices>
        </items>
    </items>
</jcr:root>
