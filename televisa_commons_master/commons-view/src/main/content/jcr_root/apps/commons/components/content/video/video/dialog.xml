<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="500"
    title="commons.video.title"
    width="1000"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <video
                jcr:primaryType="cq:Panel"
                title="commons.video.name">
                <items jcr:primaryType="cq:WidgetCollection">
                    <videoPlayer
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.videoplayer.description"
                        fieldLabel="commons.video.videoplayer.label"
                        name="./videoPlayer"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <brightcove
                                jcr:primaryType="nt:unstructured"
                                text="BrightCove"
                                value="8"/>
                            <youtube
                                jcr:primaryType="nt:unstructured"
                                text="YouTube"
                                value="13"/>
                            <toothpick
                                jcr:primaryType="nt:unstructured"
                                text="ToothPick"
                                value=""/>
                            <onlinevideo
                                jcr:primaryType="nt:unstructured"
                                text="Online Video"
                                value=""/>
                            <akamaihds
                                jcr:primaryType="nt:unstructured"
                                text="Akamai HDS"
                                value=""/>
                            <multistream
                                jcr:primaryType="nt:unstructured"
                                text="Multistream"
                                value=""/>
                        </options>
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            loadcontent="function(field,record,path){ videoPlayerLoadContent(field,record,path);}"
                            selectionchanged="function(t, value, isChecked){videoPlayerSelectionChanged(t, value, isChecked);}"/>
                    </videoPlayer>
                </items>
            </video>
            <settings1
                jcr:primaryType="cq:Panel"
                title="commons.video.settings1.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <title
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.title.description"
                        fieldLabel="commons.video.title.label"
                        id="title"
                        name="./title"
                        xtype="textfield"/>
                    <program
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.program.description"
                        fieldLabel="commons.video.program.label"
                        id="program"
                        name="./program"
                        xtype="textfield"/>
                    <programName
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.programName.description"
                        fieldLabel="commons.video.programName.label"
                        id="programName"
                        name="./programName"
                        xtype="textfield"/>
                    <summary
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.summary.description"
                        fieldLabel="commons.video.summary.label"
                        id="summary"
                        name="./summary"
                        xtype="textarea"/>
                    <releaseDate
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.releaseDate.description"
                        fieldLabel="commons.video.releaseDate.label"
                        id="releaseDate"
                        name="./releaseDate"
                        xtype="datetime"/>
                    <topic
                        jcr:primaryType="cq:Widget"
                        cls="cq-propsdialog-tags"
                        fieldLabel="commons.article.topic.label"
                        fieldSubLabel="Tags/Keywords"
                        name="./topic"
                        xtype="tags"/>
                </items>
            </settings1>
            <settings2
                jcr:primaryType="cq:Panel"
                title="commons.video.settings2.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <season
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.season.label"
                        id="season"
                        name="./season"
                        xtype="textfield"/>
                    <chapter
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.chapter.label"
                        id="chapter"
                        name="./chapter"
                        xtype="textfield"/>
                    <source
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.source.label"
                        name="./source"
                        xtype="textfield"/>
                    <cast
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.cast.label"
                        name="./cast"
                        namespaces="[elenco]"
                        xtype="tags"/>
                    <videoType
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.videoType.label"
                        name="./videoType"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <clip
                                jcr:primaryType="nt:unstructured"
                                text="commons.video.clip.text"
                                value="clip"/>
                            <fullEpisode
                                jcr:primaryType="nt:unstructured"
                                text="commons.video.fullEpisode.text"
                                value="full_episode"/>
                        </options>
                    </videoType>
                    <tooltip
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.tooltip.label"
                        id="tooltip"
                        name="./tooltip"
                        xtype="textarea"/>
                    <author
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.author.label"
                        name="./author"
                        xtype="textfield"/>
                    <imageAlt
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.imageAlt.description"
                        fieldLabel="commons.video.imageAlt.label"
                        name="./imageAlt"
                        xtype="textfield"/>
                </items>
            </settings2>
            <image
                jcr:primaryType="cq:Widget"
                allowUpload="{Boolean}false"
                cropParameter="./imageCrop"
                ddGroups="[media]"
                fileNameParameter="./fileName"
                fileReferenceParameter="./fileReference"
                mapParameter="./imageMap"
                name="./file"
                requestSuffix=".img.png"
                rotateParameter="./imageRotate"
                title="commons.image.title"
                xtype="html5smartimage"/>
            <youtube
                jcr:primaryType="cq:Panel"
                id="youtube"
                itemId="youtube"
                title="commons.video.youtube.label">
                <items jcr:primaryType="cq:WidgetCollection">
                    <youtubeproperties
                        jcr:primaryType="cq:Widget"
                        collapsible="{Boolean}false"
                        title="commons.video.youtubeproperties.label"
                        xtype="dialogfieldset">
                        <items jcr:primaryType="cq:WidgetCollection">
                            <videoId
                                jcr:primaryType="cq:Widget"
                                fieldDescription="commons.video.videoid.description"
                                fieldLabel="commons.video.videoid.label"
                                name="./youtubeVideoId"
                                validator="function(value){ return youtubeValidator(value);}"
                                xtype="textfield">
                                <listeners
                                    jcr:primaryType="nt:unstructured"
                                    invalid="function(t, msg){ youtubeInvalid(t, msg);}"
                                    valid="function(t){youtubeValid(t);}"/>
                            </videoId>
                            <videoName
                                jcr:primaryType="cq:Widget"
                                itemId="videoName"
                                name="./youtubeVideoName"
                                xtype="hidden"/>
                            <videoNameLabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="commons.video.videoname.label"
                                itemId="videoNameLabel"
                                xtype="label"/>
                            <durationLabel
                                jcr:primaryType="cq:Widget"
                                fieldLabel="commons.video.duration.label"
                                itemId="durationLabel"
                                name="./youtubeVideoDuration"
                                xtype="label"/>
                            <duration
                                jcr:primaryType="cq:Widget"
                                itemId="duration"
                                name="./youtubeVideoDuration"
                                xtype="hidden"/>
                        </items>
                    </youtubeproperties>
                </items>
            </youtube>
            <brightcove1
                jcr:primaryType="cq:Panel"
                itemId="brightcove1"
                title="commons.video.brightcove1.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <videoId
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.videoid.description"
                        fieldLabel="commons.video.videoid.label"
                        id="brightcoveId"
                        name="./brightcove/videoId"
                        xtype="textfield"/>
                    <import
                        jcr:primaryType="cq:Widget"
                        boxMaxWidth="50"
                        scale="small"
                        style="padding-left:133px; padding-bottom:10px;"
                        text="commons.video.import.text"
                        xtype="button">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            click="function(t, eventObject){importButtonClick(t,eventObject);}"/>
                    </import>
                    <m3u8
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.m3u8.label"
                        id="m3u8"
                        name="./brightcove/m3u8"
                        xtype="textfield"/>
                    <f4m
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.f4m.label"
                        id="f4m"
                        name="./brightcove/f4m"
                        xtype="textfield"/>
                    <videoUrl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.videourl.label"
                        id="videoUrl"
                        name="./brightcove/videoUrl"
                        xtype="textfield"/>
                    <videoMedium
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.videoMedium.label"
                        id="videoMedium"
                        name="./brightcove/videoMedium"
                        xtype="textfield"/>
                    <videoHigh
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.videoHigh.label"
                        id="videoHigh"
                        name="./brightcove/videoHigh"
                        xtype="textfield"/>
                    <imageUrl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.imageUrl.label"
                        id="imageUrl"
                        name="./brightcove/imageUrl"
                        xtype="textfield"/>
                    <thumbnailUrl
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.thumbnail.label"
                        id="thumbnailUrl"
                        name="./brightcove/thumbnailUrl"
                        xtype="textfield"/>
                    <duration
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.brightcoveduration.label"
                        id="duration"
                        name="./brightcove/duration"
                        xtype="textfield"/>
                    <referenceId
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.referenceId.label"
                        id="referenceId"
                        name="./brightcove/referenceId"
                        xtype="textfield"/>
                    <assetPath
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.assetPath.label"
                        id="assetPath"
                        name="./brightcove/assetPath"
                        xtype="textfield"/>
                    <playerId
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.playerid.label"
                        name="./brightcove/playerId"
                        xtype="textfield"/>
                </items>
            </brightcove1>
            <brightcove2
                jcr:primaryType="cq:Panel"
                itemId="brightcove2"
                title="commons.video.brightcove2.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <geoFilter
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.geoFilter.label"
                        id="geoFilter"
                        name="./brightcove/geoFilter"
                        type="select"
                        xtype="selection">
                        <listeners
                            jcr:primaryType="nt:unstructured"
                            beforeloadcontent="function(field, record, path){geoFilterBeforeLoadContent(field,record,path);}"/>
                    </geoFilter>
                    <socialText
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.video.socialText.description"
                        fieldLabel="commons.video.socialText.label"
                        name="./brightcove/socialText"
                        xtype="textarea"/>
                    <extras
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.extras.label"
                        name="./brightcove/extras"
                        xtype="textfield"/>
                    <bgcolor
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.video.bgcolor.label"
                        name="./brightcove/bgcolor"
                        xtype="textfield"/>
                    <autostart
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldDescription="commons.video.autostart.description"
                        fieldLabel="commons.video.autostart.label"
                        inputValue="{Boolean}true"
                        name="./brightcove/autoStart"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </brightcove2>
            <brightcove3
                jcr:primaryType="cq:Panel"
                itemId="brightcove3"
                title="commons.video.brightcove3.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <showRepeatVideo
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldDescription="&lt;br>"
                        fieldLabel="commons.video.showRepeatVideo.label"
                        inputValue="{Boolean}true"
                        name="./brightcove/showRepeatVideo"
                        style="padding-left:20px"
                        type="checkbox"
                        xtype="selection"/>
                    <showFacebook
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldDescription="&lt;br>"
                        fieldLabel="commons.video.showFacebook.label"
                        inputValue="{Boolean}true"
                        name="./brightcove/showFacebook"
                        style="padding-left:20px"
                        type="checkbox"
                        xtype="selection"/>
                    <showTwitter
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldDescription="&lt;br>"
                        fieldLabel="commons.video.showTwitter"
                        name="./brightcove/showTwitter"
                        style="padding-left:20px"
                        type="checkbox"
                        xtype="selection"/>
                    <showExpand
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldDescription="&lt;br>"
                        fieldLabel="commons.video.showExpand.label"
                        inputValue="{Boolean}true"
                        name="./brightcove/showExpand"
                        style="padding-left:20px"
                        type="checkbox"
                        xtype="selection"/>
                    <showPopOut
                        jcr:primaryType="cq:Widget"
                        defaultValue="true"
                        fieldDescription="&lt;br>"
                        fieldLabel="commons.video.showPopOut.label"
                        inputValue="{Boolean}true"
                        name="./brightcove/showPopOut"
                        style="padding-left:20px"
                        type="checkbox"
                        xtype="selection"/>
                </items>
            </brightcove3>
        </items>
    </items>
</jcr:root>
