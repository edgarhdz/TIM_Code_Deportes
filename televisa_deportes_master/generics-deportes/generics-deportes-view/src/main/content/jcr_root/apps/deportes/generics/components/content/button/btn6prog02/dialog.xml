<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="670"
    width="700"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
	<inheritanceTab
		jcr:primaryType="cq:Widget"
		path="/apps/commons/components/content/base/inheritance/inheritanceTab.infinity.json"
		xtype="cqinclude"/>
        <tab1
            jcr:primaryType="cq:Panel"
            title="genericsdeportes.link.title">
            <items jcr:primaryType="cq:WidgetCollection">
                <text
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    defaultValue="Super clic"
                    fieldDescription="commons.link.description"
                    fieldLabel="commons.link.title"
                    name="./titleLinkText"
                    xtype="textfield"/>
                <linktype
                    jcr:primaryType="cq:Widget"
                    fieldLabel="commons.link.linktype-label"
                    name="./titleLinkType"
                    type="radio"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <internal
                            jcr:primaryType="nt:unstructured"
                            text="commons.link.internallink-label"
                            value="internal"/>
                        <external
                            jcr:primaryType="nt:unstructured"
                            text="commons.link.externallink-label"
                            value="external"/>
                    </options>
                    <listeners
                        jcr:primaryType="nt:unstructured"
                        loadcontent="function(field, record, path) {  linkLoadContent(field, record, path);}"
                        selectionchanged="function(selection,value, checked){ linkSelectionChanged(selection,value, checked); }"/>
                </linktype>
                <internallink
                    jcr:primaryType="cq:Widget"
                    fieldDescription="commons.link.internallink-description"
                    fieldLabel="commons.link.internallink-label"
                    name="./titleInternalLink"
                    rootPath="/content/televisa"
                    rootTitle="Televisa"
                    xtype="pathfield"/>
                <externallink
                    jcr:primaryType="cq:Widget"
                    fieldDescription="commons.link.externallink-description"
                    fieldLabel="commons.link.externallink-label"
                    name="./titleExternalLink"
                    xtype="textfield"/>

                <target
                    jcr:primaryType="cq:Widget"
                    defaultValue="_self"
                    fieldDescription="commons.link.target-description"
                    fieldLabel="commons.link.target-label"
                    name="./titleLinkTarget"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <blank
                            jcr:primaryType="nt:unstructured"
                            text="commons.link.target-option-blank-text"
                            value="_blank"/>
                        <self
                            jcr:primaryType="nt:unstructured"
                            text="commons.link.target-option-self-text"
                            value="_self"/>
                    </options>
                </target>
                <title
                    jcr:primaryType="cq:Widget"
                    fieldDescription="commons.link.title-description"
                    fieldLabel="commons.link.title-label"
                    name="./titleTitle"
                    xtype="textfield"/>
                <hide
           	 			jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.hide-description"
                        fieldLabel="commons.link.hide-label"
                        name="./linkHide" 
                        type = "checkbox"            
                        xtype="selection"
           			/>
            </items>
        </tab1>
        <tab2
            jcr:primaryType="cq:Widget"
            title="commons.videoCarousel.settings.title"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <path
                    jcr:primaryType="cq:Widget"
                    allowBlank="{Boolean}false"
                    fieldDescription="genericsdeportes.btn6prog02.path.description"
                    fieldLabel="genericsdeportes.btn6prog02.path.label"
                    name="./path"
                    rootPath="/content/televisa/deportes"
                    rootTitle="Deportes"
                    xtype="pathfield"/>
                <tags
                    jcr:primaryType="cq:Widget"
                    cls="cq-propsdialog-tags"
                    fieldDescription="genericsdeportes.btn6prog02.tags.description"
                    fieldLabel="genericsdeportes.btn6prog02.tags.label"
                    name="./cq:tags"
                    xtype="tags"/>
                <showarticles
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}true"
                        fieldDescription="genericsdeportes.showarticles.description"
                        fieldLabel="genericsdeportes.showarticles.label"
                        name="./showarticles"
                        type="checkbox"
                        xtype="selection"/>
                <showvideos
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}true"
                        fieldDescription="genericsdeportes.showvideos.description"
                        fieldLabel="genericsdeportes.showvideos.label"
                        name="./showvideos"
                        type="checkbox"
                        xtype="selection"/>
                <showphotogalleries
                        jcr:primaryType="cq:Widget"
                        defaultValue="{Boolean}true"
                        fieldDescription="genericsdeportes.showphotogalleries.description"
                        fieldLabel="genericsdeportes.showphotogalleries.label"
                        name="./showphotogalleries"
                        type="checkbox"
                        xtype="selection"/>
                <target
                    jcr:primaryType="cq:Widget"
                    defaultValue="_self"
                    fieldDescription="commons.link.target-description"
                    fieldLabel="commons.link.target-label"
                    name="./linkTarget"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <blank
                            jcr:primaryType="nt:unstructured"
                            text="commons.link.target-option-blank-text"
                            value="_blank"/>
                        <self
                            jcr:primaryType="nt:unstructured"
                            text="commons.link.target-option-self-text"
                            value="_self"/>
                    </options>
                </target>
            </items>
        </tab2>
        <devices
            jcr:primaryType="cq:Panel"
            title="deportes.devices.tabtitle.label">
            <items jcr:primaryType="cq:WidgetCollection">
                <hideDevices
                    jcr:primaryType="cq:Widget"
                    fieldDescription="deportes.devices.hidedevices.description"
                    fieldLabel="deportes.devices.hidedevices.label"
                    value=""
                    name="./hideDevice"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <item1
                            jcr:primaryType="nt:unstructured"
                            text="deportes.devices.item.do-nothing"
                            value=""/>
                        <item2
                            jcr:primaryType="nt:unstructured"
                            text="deportes.devices.item.hide-tablet-mobile"
                            value="hide-tablet"/>
                        <item3
                            jcr:primaryType="nt:unstructured"
                            text="deportes.devices.item.hide-mobile"
                            value="hide-mobile"/>
                    </options>
                </hideDevices>
            </items>
        </devices>
    </items>
</jcr:root>
