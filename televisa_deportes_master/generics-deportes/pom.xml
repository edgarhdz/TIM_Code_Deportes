	<groupId>com.televisa.generics.deportes</groupId>
	<artifactId>parent</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>${project.groupId} - ${project.artifactId}</name>

	<description>
		Parent Maven POM for the 'Televisa Generics Deportes' project.
	</description>

	<organization>
		<name>Televisa</name>
		<url><!-- TODO --></url>
	</organization>

	<modules>
		<module>generics-deportes-view</module>
		<module>generics-deportes-services</module>
		<module>generics-deportes-taglib</module>
        <module>generics-deportes-all</module>

	</modules>

	<scm>
		<connection><!-- TODO --></connection>
		<developerConnection><!-- TODO --></developerConnection>
		<url><!-- TODO --></url>
	</scm>

	<distributionManagement>
		<repository>
			<id><!-- TODO --></id>
			<name><!-- TODO --></name>
			<url><!-- TODO --></url>
		</repository>
		<snapshotRepository>
			<id><!-- TODO --></id>
			<name><!-- TODO --></name>
			<url><!-- TODO --></url>
		</snapshotRepository>
