<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        jcr:primaryType="cq:Dialog"
          height="500"
          title="deportes.btnCarruProg02Item.title"
          width="900"
          xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <settings
                    jcr:primaryType="cq:Panel"
                    title="deportes.settings">
                <items jcr:primaryType="cq:WidgetCollection">
                    <text
                            jcr:primaryType="cq:Widget"
                            fieldDescription="deportes.btnCarruProg02Item.text.description"
                            fieldLabel="deportes.btnCarruProg02Item.label.text"
                            allowBlank="{Boolean}false"
                            name="./text"
                            xtype="textfield"/>
                    <description
                            jcr:primaryType="cq:Widget"
                            fieldDescription="deportes.btnCarruProg02Item.description.text"
                            fieldLabel="deportes.btnCarruProg02Item.label.description"
                            name="./description"
                            xtype="textfield"/>
                    <linktype
                            jcr:primaryType="cq:Widget"
                            fieldLabel="deportes.link.linktype-label"
                            name="./linkType"
                            type="radio"
                            xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <internal
                                    jcr:primaryType="nt:unstructured"
                                    text="deportes.link.internallink-label"
                                    value="internal"/>
                            <external
                                    jcr:primaryType="nt:unstructured"
                                    text="deportes.link.externallink-label"
                                    value="external"/>
                        </options>
                        <listeners
                                jcr:primaryType="nt:unstructured"
                                loadcontent="function(field, record, path) {  linkLoadContent(field, record, path);}"
                                selectionchanged="function(selection,value, checked){ linkSelectionChanged(selection,value, checked); }"/>
                    </linktype>
                    <internallink
                            jcr:primaryType="cq:Widget"
                            fieldDescription="deportes.link.internallink-description"
                            fieldLabel="deportes.link.internallink-label"
                            name="./internalLink"
                            rootPath="/content/televisa"
                            rootTitle="Televisa"
                            xtype="pathfield"/>
                    <externallink
                            jcr:primaryType="cq:Widget"
                            fieldDescription="deportes.link.externallink-description"
                            fieldLabel="deportes.link.externallink-label"
                            name="./externalLink"
                            xtype="textfield"/>
                    <linkTitle
                            jcr:primaryType="cq:Widget"
                            fieldDescription="deportes.link.title-description"
                            fieldLabel="deportes.link.title-label"
                            name="./linkTitle"
                            xtype="textfield"/>
                    <target
                            jcr:primaryType="cq:Widget"
                            defaultValue="_self"
                            fieldDescription="deportes.link.target-description"
                            fieldLabel="deportes.link.target-label"
                            name="./linkTarget"
                            type="select"
                            xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                    jcr:primaryType="nt:unstructured"
                                    text="deportes.link.target-option-blank-text"
                                    value="_blank"/>
                            <self
                                    jcr:primaryType="nt:unstructured"
                                    text="deportes.link.target-option-self-text"
                                    value="_self"/>
                        </options>
                    </target>
                </items>
            </settings>
            <image
                    jcr:primaryType="cq:Widget"
                    cropParameter=""
                    ddGroups="[media]"
                    fileNameParameter="./fileName"
                    fileReferenceParameter="./fileReference"
                    mapParameter=""
                    name="./file"
                    requestSuffix=".img.png"
                    rotateParameter=""
                    title="deportes.btnCarruProg02Item.image.title"
                    xtype="html5smartimage"
                    allowUpload="false" />
        </items>
</jcr:root>
