<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    height="370"
    title="commons.onDemand.title"
    width="550"
    xtype="dialog">
    <items
        jcr:primaryType="cq:Widget"
        xtype="tabpanel">
        <items jcr:primaryType="cq:WidgetCollection">
            <tab1
                jcr:primaryType="cq:Panel"
                title="commons.onDemand.settings.title">
                <items jcr:primaryType="cq:WidgetCollection">
                    <path
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        blankText="commons.onDemand.path.blanktext"
                        fieldDescription="commons.onDemand.path.description"
                        fieldLabel="commons.onDemand.path.label"
                        name="./path"
                        rootPath="/content/televisa"
                        rootTitle="Televisa"
                        xtype="pathfield"/>
                    <tags
                        jcr:primaryType="cq:Widget"
                        allowBlank="false"
                        blankText="commons.onDemand.tags.blanktext"
                        cls="cq-propsdialog-tags"
                        fieldDescription="commons.onDemand.tags.description"
                        fieldLabel="commons.onDemand.tags.label"
                        name="./cq:tags"
                        xtype="tags"/>
                    <target
                        jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.target-description"
                        fieldLabel="commons.link.target-label"
                        name="./linkTargetVideo"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <blank
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-blank-text"
                                value="_blank"/>
                            <self
                                jcr:primaryType="nt:unstructured"
                                text="commons.link.target-option-self-text"
                                value="_self"/>
                        </options>
                    </target>
                    <playVideo
                        jcr:primaryType="cq:Widget"
                        fieldLabel="commons.onDemand.playVideo.label"
                        name="./playVideo"
                        type="radio"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <play
                                jcr:primaryType="nt:unstructured"
                                text="commons.onDemand.playVideo.options.play"
                                value="play"/>
                            <goToPage
                                jcr:primaryType="nt:unstructured"
                                text="commons.onDemand.playVideo.options.goToPage"
                                value="goToPage"/>
                        </options>
                    </playVideo>
                        <hide
           	 			jcr:primaryType="cq:Widget"
                        fieldDescription="commons.link.hide-description"
                        fieldLabel="commons.link.hide-label"
                        name="./linkHide" 
                        type = "checkbox"            
                        xtype="selection"
           			/>
                </items>
            </tab1>
            <link
                jcr:primaryType="cq:Widget"
                path="/apps/commons/components/content/base/link/dialog/items/items/link.infinity.json"
                xtype="cqinclude"/>
            <devices
                jcr:primaryType="cq:Panel"
                title="deportes.devices.tabtitle.label">
                <items jcr:primaryType="cq:WidgetCollection">
                    <hideDevices
                        jcr:primaryType="cq:Widget"
                        fieldDescription="deportes.devices.hidedevices.description"
                        fieldLabel="deportes.devices.hidedevices.label"
                        name="./hideDevice"
                        type="select"
                        xtype="selection">
                        <options jcr:primaryType="cq:WidgetCollection">
                            <item1
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.do-nothing"
                                value=""/>
                            <item2
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-tablet-mobile"
                                value="hide-tablet"/>
                            <item3
                                jcr:primaryType="nt:unstructured"
                                text="deportes.devices.item.hide-mobile"
                                value="hide-mobile"/>
                        </options>
                    </hideDevices>
                </items>
            </devices>
        </items>
    </items>
</jcr:root>
